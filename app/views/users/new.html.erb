<h1>Sign up!</h1>

<%= form_for @user do |f| %>
	<%= f.label :username, 'Username:' %>	
	<%= f.text_field :username %>
  <%= f.label :password, 'Password:' %>	
	<%= f.text_field :password %>
  <%= f.label :password_confirmation, 'Confirmation:' %>	
	<%= f.text_field :password_confirmation %>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>
  <%= f.submit 'Create new account' %>
<% end %>
